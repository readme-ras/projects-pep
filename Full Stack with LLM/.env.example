# ── Hugging Face ──────────────────────────────────────────────────────────────
# Get your token from https://huggingface.co/settings/tokens
HF_API_TOKEN=hf_your_token_here

# Model to use — any text-generation model on HF Hub
HF_MODEL_ID=mistralai/Mistral-7B-Instruct-v0.3

# Set to true to run model locally (requires transformers + torch installed)
HF_USE_LOCAL=false

HF_MAX_TOKENS=512
HF_TEMPERATURE=0.7

# ── Google Sheets ─────────────────────────────────────────────────────────────
# Path to service account JSON key file
GOOGLE_CREDENTIALS_FILE=credentials.json

# OR inline JSON (better for cloud deployments)
# GOOGLE_CREDENTIALS_JSON={"type":"service_account",...}

# The ID from your spreadsheet URL: /spreadsheets/d/<ID>/edit
SPREADSHEET_ID=your_spreadsheet_id_here

# Worksheet name used to log conversations
CHAT_LOG_SHEET=ChatLog
